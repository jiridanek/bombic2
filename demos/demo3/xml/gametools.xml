<?xml version="1.0" encoding="UTF-8" ?>

<gametools src="img/gametools.bmp">
	<!-- obrazek plamene, ruzne smery -->
	<flame timeperiod="1">
		<top x="205" y="1">
			<animation rate="10">
				<animation_item x="205" y="52" />
				<animation_item x="205" y="103" />
			</animation>
		</top>
		<bottom x="307" y="1">
			<animation rate="10">
				<animation_item x="307" y="52" />
				<animation_item x="307" y="103" />
			</animation>
		</bottom>
		<topbottom x="256" y="1">
			<animation rate="10">
				<animation_item x="256" y="52" />
				<animation_item x="256" y="103" />
			</animation>
		</topbottom>
		<left x="1" y="1">
			<animation rate="10">
				<animation_item x="1" y="52" />
				<animation_item x="1" y="103" />
			</animation>
		</left>
		<right x="103" y="1">
			<animation rate="10">
				<animation_item x="103" y="52" />
				<animation_item x="103" y="103" />
			</animation>
		</right>
		<leftright x="52" y="1">
			<animation rate="10">
				<animation_item x="52" y="52" />
				<animation_item x="52" y="103" />
			</animation>
		</leftright>
		<cross x="154" y="1">
			<animation rate="10">
				<animation_item x="154" y="52" />
				<animation_item x="154" y="103" />
			</animation>
		</cross>
	</flame>
	<!-- obrazek bomb -->
	<bombs>
		<normal x="1" y="158">
			<animation rate="2">
				<animation_item x="52" y="158" />
				<animation_item x="103" y="158" />
				<animation_item x="154" y="158" />
				<animation_item x="205" y="158" />
				<animation_item x="256" y="158" />
				<animation_item x="307" y="158" />
			</animation>
		</normal>
		<mega x="1" y="205">
			<animation rate="2">
				<animation_item x="52" y="205" />
				<animation_item x="103" y="205" />
				<animation_item x="154" y="205" />
				<animation_item x="205" y="205" />
				<animation_item x="256" y="205" />
				<animation_item x="307" y="205" />
			</animation>
		</mega>
	</bombs>
	<!-- obrazky zobrazovacich panelu jednotlivych bombicu -->
	<!-- rozmery a souradnice v pixelech -->
	<panels height="vyska panelu v pixelech" width="sirska panelu v pixelech">
		<player1 x="souradnice obrazku panelu ve zdroji" y="souradnice v pixelech" />
		<player2 x="souradnice obrazku panelu ve zdroji" y="souradnice v pixelech" />
		<player3 x="souradnice obrazku panelu ve zdroji" y="souradnice v pixelech" />
		<player4 x="souradnice obrazku panelu ve zdroji" y="souradnice v pixelech" />
	</panels>
	<!-- zmenseniny bonusu zobrazujici se v panelu hry -->
	<bonuses>
		<megabomb
			x="souradnice symbolu zobrazovanych v panelu v pixelech"
			y="souradnice symbolu v pixelech"
			height="vyska symbolu v pixelech"
			width="sirska symbolu v pixelech"
			/>
		<shield
			x="souradnice symbolu zobrazovanych v panelu v pixelech"
