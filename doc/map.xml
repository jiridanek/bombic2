<?xml version="1.0" encoding="UTF-8" ?>
<map 	name="jmeno mapy"
	height="vyska mapy v polickach"
	width="sirka mapy v polickach"
	background="nazev pozadi"
	>
<!-- s podtrzitkem pisu nepovinne tagy a parametry
	 		- v realne mape uz podtrzitka nepsat!!-->
	<!-- hodnoty neuvedenych atributu se podedi z nadrazeneho tagu -->
	<!-- atributy height a width maji defaultne hodnotu jedna -->
	_<walls 	_name="jmeno zdi"
			_height="vyska vlozene zdi"
			_width="sirska,kolik zabere policek"
				>
		<!-- pro kazdou jednu zed musi byt jeden tag wall -->
		<wall 	x="souradnice umisteni"
			y="souradnice umisteni"
			_name="jmeno"
			_height="vyska vlozene zdi"
			_width="sirska"
			/>
	</walls>
	<!-- pripadna rozsahlejsi (height | width >1)
		bedna bouchne cela najednou -->
	_<boxes 	name="jmeno bedny"
			count="pocet v celem kole"
			_height="vyska"
			_width="sirska"
			>
		<!-- pro kazdou pevne umistenou bednu musi byt jeden tag box
			ostatni se vygeneruji na nahodne misto -->
		_<box 	x="souradnice umisteni"
			y="souradnice umisteni"
			_name="jmeno"
			_height="vyska"
			_width="sirska"
			/>
	</boxes>
	<!-- pro kazdy druh(name) prisery jeden tag creatures -->
	_<creatures 	name="jmeno prisery(druh)"
			count="pocet v celem kole"
			>
		<!-- pro kazdou pevne umistenou potvoru musi byt jeden tag box
			ostatni se vygeneruji na nahodne misto -->
		_<creature 	x="souradnice umisteni"
				y="souradnice umisteni"
				/>
	</creatures>
	<!-- v deathmatchi se nastaveni bonusu prekryje nastavenim
		z menu, cili pro ciste deathmatchove mapy je zbytecne
		zde jakekoli bonusy nastavovat -->
	<!-- pro kazdy druh(name) bonusu jeden tag bonuses -->
	_<bonuses 	name="jmeno bonusu"
			count="pocet v celem kole"
			/>
</map>
